<div class="col-12">
    <div class="row gx-3">
        <div class="col-4 ">
            <h5>{{number}}</h5>
            <p><b>{{status}}</b></p>
        </div>

        <div class="col-2">
            {{#with amount}}
            <h5>{{title}}</h5>
            <p><b>{{value}}</b></p>
            {{/with}}
        </div>

        <div class="col-4 mx-auto">
            {{#each images}}
            <img src="{{this}}">
            {{/each}}
        </div>

        <div class="col-2 my-auto">
            {{#with button}}
            {{#if isPrimary}}
            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
            {{/if}}
            {{/with}}
        </div>
    </div>
</div>

<hr>