<div class="card text-bg-dark">
    <div class="card-body">
        <h2>{{header}}</h2>
        <p class="mb-4 mt-3">{{description}}</p>
        <div>
            {{#each buttons}}
            <div class="mt-3">
                <a class="btn btn-primary" href="{{link}}">{{text}}</a>
            </div>
            {{/each}}
        </div>
    </div>
</div>