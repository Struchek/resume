<div class="row">
    <div class="col-12">
        <div class="card my-3">
            <div class="card-body">

                <div class="row gx-3">
                    <div class="col-2">
                        <img class="card-img" src="{{image}}">
                    </div>


                    <div class="col-4">
                        <h4 class="pt-3">{{name}}</h4>
                        <p>{{description}}</p>
                    </div>

                    <div class="col-2 ps-4 my-auto">
                        {{#with price}}
                        <h5 class="">{{title}}:</h5>
                        <p class="fs-4">{{value}}</p>
                        {{/with}}
                    </div>

                    <div class="col-2 my-auto">
                        <p class="fs-5">{{amount}}</p>
                    </div>

                    <div class="col-2 my-auto">
                        {{#each buttons}}

                        {{#if isPrimary}}
                        <button type="button" class="btn btn-primary mb-3">{{text}}</button>
                        {{/if}}
                        {{#if isDanger}}
                        <button type="button" class="btn btn-outline-danger">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>