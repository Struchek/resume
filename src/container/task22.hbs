{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <h1 class="text-center">{{page_header.title}}</h1>
        <br>
        <p class="text-center text-uppercase">{{page_header.description}}</p>
        <br>
        {{#with section}}
        <div class="card">
            <div class="card-body">
                {{#with about_us}}
                <div class="display-6 text-end">{{title_list.main}}</div>
                <br>
                <h2 class="text-end">{{title_list.sub}}</h2>
                <br>
                <button class="btn btn-outline-info">{{button.text}}</button>
                {{/with}}
            </div>
        </div>
        <br>
        <br>
        <div class="card">
            <div class="card-body">
                {{#with advantage}}
                <div class="display-5">{{title}}</div>
                <br>
                <div class="card">
                    <div class="card-body">
                        {{#with efficiency}}
                        <div class="display-4 text-lowercase">{{title}}</div>
                        <br>
                        <h6>{{sub_title}}</h6>
                        <br>
                        <p>{{description}}</p>
                        <br>
                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                        {{#with innovation}}
                        <div class="display-4 text-center text-lowercase">{{title}}</div>
                        <br>
                        <h6 class="text-center">{{sub_title}}</h6>
                        <br>
                        <p class="text-center">{{description}}</p>
                        <br>
                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-body">
                        {{#with collaboration}}
                        <div class="display-4 text-end text-lowercase">{{title}}</div>
                        <br>
                        <h6 class="text-end">{{sub_title}}</h6>
                        <br>
                        <p class="text-end">{{description}}</p>
                        <br>
                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        <br>
        <br>
        {{#with agreement}}
        <div class="card">
            <div class="card-body">
                <div class="display-5 text-lowercase">{{title}}</div>
                <br>
                {{#with info}}
                <div class="card">
                    <div class="card-body">
                        <h5>{{sub_title}}</h5>
                        <br>
                        {{#with detail}}
                        <div class="card">
                            <div class="card-body">
                                <p>{{text}}</p>
                                <br>
                                <button class="btn btn-success">{{button}}</button>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
        {{/with}}
    </main>
</div>

