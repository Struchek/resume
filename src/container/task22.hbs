{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <h1 class="text-center">{{page_header.title}}</h1>

        <p class="text-center text-uppercase my-4">{{page_header.description}}</p>

        {{#with section}}
        <div class="card">
            <div class="card-body">
                {{#with about_us}}
                <div class="display-6 text-end">{{title_list.main}}</div>

                <h2 class="text-end my-4">{{title_list.sub}}</h2>

                <button class="btn btn-outline-info">{{button.text}}</button>
                {{/with}}
            </div>
        </div>

        <div class="card my-5">
            <div class="card-body">
                {{#with advantage}}
                <div class="display-5 mb-3">{{title}}</div>

                <div class="card">
                    <div class="card-body">
                        {{#with efficiency}}
                        <div class="display-4 text-lowercase mb-4">{{title}}</div>

                        <h6>{{sub_title}}</h6>

                        <p class="my-4">{{description}}</p>

                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>

                <div class="card my-3">
                    <div class="card-body">
                        {{#with innovation}}
                        <div class="display-4 text-center text-lowercase mb-4">{{title}}</div>

                        <h6 class="text-center">{{sub_title}}</h6>

                        <p class="text-center my-4">{{description}}</p>

                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        {{#with collaboration}}
                        <div class="display-4 text-end text-lowercase mb-4">{{title}}</div>

                        <h6 class="text-end">{{sub_title}}</h6>

                        <p class="text-end my-4">{{description}}</p>

                        <button class="btn btn-outline-warning">{{button}}</button>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>

        {{#with agreement}}
        <div class="card">
            <div class="card-body">
                <div class="display-5 text-lowercase mb-4">{{title}}</div>

                {{#with info}}
                <div class="card">
                    <div class="card-body">
                        <h5 class="mb-4">{{sub_title}}</h5>

                        {{#with detail}}
                        <div class="card">
                            <div class="card-body">
                                <p class="mb-4">{{text}}</p>

                                <button class="btn btn-success">{{button}}</button>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
        {{/with}}
    </main>
</div>

