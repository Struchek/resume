{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            <h1 class="mb-4">{{make}} {{model}}<span class="badge bg-secondary"></span></h1>

            <p><b>Year: </b>{{year}}</p>
            <p><b>Color: </b>{{color}}</p>
            <hr>
            <h2 class="mb-4">Features:<span class="badge bg-secondary"></span></h2>

            {{#with features}}
            <ul>
                <li>
                    {{#if interior}}
                    <h3 class="mb-4">Interior:<span class="badge bg-secondary"></span></h3>

                    {{#with interior}}
                    <ul>
                        <li>
                            {{#with seats}}
                            <h4 class="mb-4">Seats:<span class="badge bg-secondary"></span></h4>

                            <ul>
                                <li>
                                    <p><b>Material: </b>{{material}}</p>
                                </li>
                                <li>
                                    <p><b>Color: </b>{{color}}</p>
                                </li>
                                <li>
                                    <p><b>Heated: </b>{{#if heated}} established {{/if}}</p>
                                </li>
                                <li>
                                    <p><b>Ventilated: </b>{{#if ventilated}} established {{/if}}</p>
                                </li>
                            </ul>
                            {{/with}}
                        </li>

                        <li class="py-4 ">
                            {{#with dashboard}}
                            <h4 class="mb-4">Dashboard:<span class="badge bg-secondary"></span></h4>

                            <p><b>Material: </b>{{material}}</p>
                            <p><b>Color: </b>{{color}}</p>
                            <p><b>Display: </b></p>
                            {{#with display}}
                            <ul>
                                <li>
                                    <p><b>Type: </b>{{type}}</p>
                                </li>
                                <li>
                                    <p><b>Size: </b>{{size}}</p>
                                </li>
                                <li>
                                    <p><b>Resolution: </b>{{resolution}}</p>
                                </li>
                                <li>
                                    <p><b>Touchscreen: </b>{{#if touchscreen}} established {{/if}}</p>
                                </li>
                            </ul>
                            {{/with}}
                            {{/with}}
                        </li>
                        <li>
                            {{#with audio}}
                            <h4 class="mb-4">Audio:<span class="badge bg-secondary"></span></h4>

                            <ul>
                                <li>
                                    <p><b>System: </b>{{system}}</p>
                                </li>
                                <li>
                                    <p><b>Speakers: </b>{{speakers}}</p>
                                </li>
                                <li>
                                    <p><b>Subwoofer: </b>{{#if subwoofer}} established {{/if}}</p>
                                </li>
                                <li>
                                    <p><b>Bluetooth: </b>{{#if bluetooth}} established {{/if}}</p>
                                </li>
                                <li>
                                    <p><b>USB: </b>{{#if usb}} established {{/if}}</p>
                                </li>
                            </ul>
                            {{/with}}
                        </li>
                    </ul>
                    {{/with}}
                    {{/if}}
                </li>
                <hr>
                <li>
                    {{#if exterior}}
                    <h3 class="mb-4">Exterior:<span class="badge bg-secondary"></span></h3>

                    {{#with exterior}}
                    <ul>
                        <li>
                            <h4 class="mb-4">Wheels:<span class="badge bg-secondary"></span></h4>

                            <ul>
                                {{#with wheels}}
                                <li>
                                    <p><b>Size: </b>{{size}}</p>
                                </li>
                                <li>
                                    <p><b>Type: </b>{{type}}</p>
                                </li>
                                <li>
                                    <p><b>Color: </b>{{color}}</p>
                                </li>
                                {{/with}}
                            </ul>
                        </li>

                        <li class="py-4">
                            <h4 class="mb-4">Headlights:<span class="badge bg-secondary"></span></h4>

                            <ul>
                                {{#with headlights}}
                                <li>
                                    <p><b>Type: </b>{{type}}</p>
                                </li>
                                <li>
                                    <p><b>Brightness: </b>{{brightness}}</p>
                                </li>
                                <li>
                                    <p><b>Automatic: </b>{{#if automatic}} established {{/if}}</p>
                                </li>
                                {{/with}}
                            </ul>
                        </li>

                        <li>
                            <h4 class="mb-4">Sunroof:<span class="badge bg-secondary"></span></h4>

                            <ul>
                                {{#with sunroof}}
                                <li>
                                    <p><b>Type: </b>{{type}}</p>
                                </li>
                                <li>
                                    <p><b>Size: </b>{{size}}</p>
                                </li>
                                <li>
                                    <p><b>Automatic: </b>{{#if automatic}} established {{/if}}</p>
                                </li>
                                {{/with}}
                            </ul>
                        </li>
                    </ul>
                    {{/with}}
                    {{/if}}
                </li>
                <hr>
                <li>
                    {{#if safety}}
                    <h3 class="mb-4">Safety:<span class="badge bg-secondary"></span></h3>

                    {{#with safety}}
                    <ul>
                        <li class="pb-4">
                            <h4 class="mb-4">Airbags:<span class="badge bg-secondary"></span></h4>

                            <ul>
                                {{#with airbags}}
                                <li>
                                    <p><b>front: </b>{{front}}</p>
                                </li>
                                <li>
                                    <p><b>side: </b>{{side}}</p>
                                </li>
                                <li>
                                    <p><b>knee: </b>{{knee}}</p>
                                </li>
                                <li>
                                    <p><b>rear: </b>{{rear}}</p>
                                </li>
                                {{/with}}
                            </ul>
                        </li>

                        <li>
                            <h4 class="mb-4">Assistance:<span class="badge bg-secondary"></span></h4>

                            <ul>
                                {{#with assistance}}
                                <li>
                                    <p><b>Blind spot monitoring: </b>{{#if blind_spot_monitoring}} established {{/if}}
                                    </p>
                                </li>
                                <li>
                                    <p><b>Rear cross traffic alert: </b>{{#if rear_cross_traffic_alert}} established
                                        {{/if}}
                                    </p>
                                </li>
                                <li>
                                    <p><b>Lane departure warning: </b>{{#if lane_departure_warning}} established {{/if}}
                                    </p>
                                </li>
                                <li>
                                    <p><b>Adaptive cruise control: </b>{{#if adaptive_cruise_control}} established
                                        {{/if}}
                                    </p>
                                </li>
                                <li>
                                    <p><b>Collision warning: </b>{{#if collision_warning}} established {{/if}}
                                    </p>
                                </li>
                                {{/with}}
                            </ul>
                        </li>
                    </ul>
                    {{/with}}
                    {{/if}}
                </li>
            </ul>
            {{/with}}

            <h2 class="my-4">Engine:<span class="badge bg-secondary"></span></h2>

            <ul>
                {{#with engine}}
                <li>
                    <p><b>Type: </b>{{type}}</p>
                </li>
                <li>
                    <p><b>Displacement: </b>{{displacement}}</p>
                </li>
                <li>
                    <p><b>Horsepower: </b>{{horsepower}}</p>
                </li>
                <li>
                    <p><b>Torque: </b>{{torque}}</p>
                </li>
                <li>
                    <p><b>Transmission: </b>{{transmission.type}}, {{transmission.gears}} gears</p>
                </li>
                {{/with}}
            </ul>

            <h2 class="my-4">Fuel economy:<span class="badge bg-secondary"></span></h2>

            <ul>
                {{#with fuel_economy}}
                <li>
                    <p><b>City: </b>{{city}}</p>
                </li>
                <li>
                    <p><b>Highway: </b>{{highway}}</p>
                </li>
                <li>
                    <p><b>Combined: </b>{{combined}}</p>
                </li>
                {{/with}}
            </ul>
            <hr>
            <h2 class="my-4">Price:<span class="badge bg-secondary"></span></h2>

            {{#with price}}
            <p><b>Base: </b>{{base}}</p>
            <p><b>Destination: </b>{{destination}}</p>
            <h4>Options:<span class="badge bg-secondary"></span></h4>
            <ul>
                {{#with options}}
                <li>
                    <p><b>Navigation: </b>{{navigation}}</p>
                </li>
                <li>
                    <p><b>Moonroof: </b>{{moonroof}}</p>
                </li>
                <li>
                    <p><b>Premium paint: </b>{{premium_paint}}</p>
                </li>
                {{/with}}
            </ul>
            <h2>TOTAL: <span class="badge bg-secondary">{{total}}</span></h2>
            {{/with}}
            </ul>
        </section>
    </main>
</div>

