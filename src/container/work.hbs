{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div class="mb-5">
    {{#with main}}
    <main>
        <section>
            {{> title big=true data='Work history'}}
            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div class="mb-3">{{position}}</div>

                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (досі працюємо)
                            {{/if}}
                        </div>

                        <div class="my-3">
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>

                        <div class="mt-5">
                            <strong>Projects ({{projectAmount}})</strong>
                        </div>

                        <ul>
                            {{#each projects}}
                            <li>
                                <div class="my-3">{{> link text=name href=url blank=true noLine=true}}</div>

                                <div>
                                    <p>{{about}}</p>
                                </div>

                                <div class="mt-4 mb-3">
                                    <em>Project stacks ({{stackAmount}})</em>
                                </div>

                                <ul class="my-3">
                                    {{#each stacks}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>

                                <div class="mt-4 mb-3">
                                    <em>Project awards ({{awardAmount}})</em>
                                </div>

                                <ul>
                                    {{#each awards}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>
                            </li>
                            {{/each}}
                        </ul>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>

    </main>
    {{/with}}
</div>

