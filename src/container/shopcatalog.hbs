{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<header class="mb-5">
    {{> header}}
</header>

<main>


    <div class="col-12 my-4">
        <ol class="breadcrumb">
            {{#each breadcrumb}}
            {{#if @last}}
            <li class="breadcrumb-item active">{{name}}</a>
            </li>
            {{else}}
            <li class="breadcrumb-item">
                <a href="{{url}}">{{name}}</a>
            </li>
            {{/if}}
            {{/each}}
        </ol>
    </div>

    <h1 class="mb-4">{{header}}</h1>


    <div class="row">
        {{#each sortBlock}}
        <div class="col-3 px-1">

            <select class="form-select">
                <option selected disabled>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>

    <div class="row my-5">
        <div class="col-4">
            {{#with filterBlock}}

            <div class="card">
                <div class="card-body">

                    {{#with sellers}}

                    <p>{{title}}</p>

                    {{#each list}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}

                    {{/with}}

                    <hr class="my-3">

                    {{#with brands}}

                    <p>{{title}}</p>

                    {{#with input}}
                    <input class="form-control mb-3" placeholder="{{placeholder}}">
                    {{/with}}

                    {{#each options}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}

                    <hr class="my-3">

                    {{/with}}

                    {{#with price}}
                    <p>{{title}}</p>

                    {{#with range}}
                    <input class="form-control mb-3" placeholder="{{from}}">
                    <input class="form-control mb-3" placeholder="{{to}}">
                    {{/with}}

                    {{#with button}}
                    <a class="btn btn-outline-dark" href="link">{{text}}</a>
                    {{/with}}

                    {{/with}}

                    {{#each filterList}}
                    <hr class="my-3">
                    <p>{{title}}</p>
                    {{#each options}}
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label">{{value}}</label>
                    </div>
                    {{/each}}
                    {{/each}}
                </div>
            </div>
            {{/with}}
        </div>

        <div class="col-8 row">
            {{#each goodsList}}
            {{> catalogItem}}
            {{/each}}
        </div>
    </div>

    {{#with service}}
    {{> cardGreen}}
    {{/with}}

    <hr>
</main>

<footer>
    {{> footerBootstrap}}
</footer>
