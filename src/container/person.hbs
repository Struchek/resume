{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
    {{> title big=true data="Person"}}
    <p>Name: {{name}}</p>
    <p>Age: {{age}}</p>
    <p>Gender: {{gender}}</p>
    <p>
        {{#with address}}
    <address>
        {{zip}}, {{country}}, {{state}}, {{city}}, {{street}}
    </address>
    {{/with}}
    </p>
    <br>
    <hr>

    {{> title data="Education"}}
    {{#each education}}
    <p><b>University: </b>{{university}}</p>
    <p><b>Major: </b>{{major}}</p>
    <p><b>Degree: </b>{{degree}}</p>
    <p><b>Graduation year: </b>{{graduationYear}}</p>
    {{/each}}
    <br>
    <hr>

    {{> title data="Work experience"}}
    {{#each workExperience}}
    <p><b>Company: </b>{{company}}</p>
    <p><b>Position: {{title}}</b></p>
    <p><b>Duration: {{startDate}} - {{endDate}}</b></p>
    <p><b>Responsibilities:</b>
    <ul>
        {{#each responsibilities}}
        <li><q>{{this}}</q></li>
        {{/each}}
    </ul>
    </p>
    <p><b>Year founded: {{year_founded}}</b></p>
    <p><b>Industry: {{industry}}</b></p>
    <h4>Employees: </h4>
    <ul>
        {{#each employees}}
        <li>
            <p><b>Name: </b>{{name}}</p>
            <p><b>Position: </b>{{position}}</p>
            <p><b>Department: </b>{{department}}</p>
            <h4>Projects: </h4>
            <ul>
                {{#each projects}}
                <li>
                    <p><b>Name: </b>{{name}}</p>
                    <p><b>Description: </b>{{description}}</p>
                    <p><b>Status: </b>{{status}}</p>
                    <h4>Teams: </h4>
                    <ul>
                        {{#each teams}}
                        <li>
                            <p><b>Team name: {{team_name}}</b></p>
                            {{#with team_leader}}
                            <p>{{name}} ({{title}})</p>
                            {{> link text=email href=email blank=true noLine=true}}
                            {{/with}}
                            <h4>Members: </h4>
                            <ul>
                                {{#each team_members}}
                                <li>
                                    <p>{{name}} ({{title}})</p>
                                    <p>{{skills}}</p>
                                    <h4>Projects:</h4>
                                    <ul>
                                        {{#each projects}}
                                        <li>
                                            <p>Name: {{name}}</p>
                                            <p>Description: <q>'Lorem ipsum dolor sit amet'</q></p>
                                            <h4>Team members:</h4>
                                            <ul>
                                                {{#each team_members}}
                                                <li>{{name}} ({{title}})</li>
                                                {{/each}}
                                            </ul>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </li>
                                {{/each}}
                            </ul>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
        </li>
        {{/each}}
    </ul>
    {{/each}}

    {{/with}}
</div>

