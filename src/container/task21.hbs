{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    <div class="card">
        {{#with heading}}

        <div class="card my-3">
            <div class="card-body">
                {{#with main}}
                <h1>{{title}}</h1>
                <p>{{text}}</p>
                {{#with button_text}}
                <div class="mb-3"><button class="btn btn-primary">{{solid}}</button></div>

                <div><button class="btn btn-outline-primary">{{outline}}</button></div>
                {{/with}}
                {{/with}}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                {{#with second}}
                <h2>{{title}}</h2>
                <p>{{text}}</p>
                {{#with button_text}}
                <div class="mb-3"><button class="btn btn-secondary">{{solid}}</button></div>

                <div><button class="btn btn-outline-secondary">{{outline}}</button></div>
                {{/with}}
                {{/with}}
            </div>
        </div>

        <div class="card my-3">
            <div class="card-body">
                {{#with subblock}}
                <h3>{{title}}</h3>
                <p>{{text}}</p>
                {{#with button_text}}
                <div class="mb-3"><button class="btn btn-dark">{{solid}}</button></div>

                <div><button class="btn btn-outline-dark">{{outline}}</button></div>
                {{/with}}
                {{/with}}
            </div>
        </div>

        {{/with}}
    </div>

    <div class="card my-5">
        {{#with nested_display}}
        <div class="card-body">
            <div class="display-1">{{title}}</div>

            {{#with children_display}}
            <div class="card my-3">
                <div class="card-body">
                    <div class="display-4">{{title}}</div>
                    <p>{{text}}</p>
                    <button class="btn btn-outline-warning">{{button.text}}</button>
                </div>
            </div>
            {{/with}}

            <div class="display-6 mb-2">{{header_text}}</div>

            <button class="btn btn-info">{{button.text}}</button>
        </div>
        {{/with}}
    </div>

    <div class="card">
        {{#with paragraph}}
        <div class="card-body">
            <p class="text-uppercase">{{title}}</p>
            <p class="text-lowercase">{{text}}</p>
            <a href="{{button.url}}" class="btn btn-link">{{button.text}}</a>

            <div class="card mt-3">
                <div class="card-body">
                    {{#each list_name}}
                    <ul>
                        <li>
                            <a href="{{url}}" class="btn btn-link">{{text}}</a>
                        </li>
                    </ul>
                    {{/each}}
                </div>
            </div>
        </div>
        {{/with}}
    </div>
</main>

