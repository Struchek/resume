{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1>{{name}} <span class="badge bg-secondary"></span></h1>
    <br>
    <p><b>Description: </b>{{description}}</p>
    <p><b>History: </b>{{history.year}} year (Founder - {{history.founder}})</p>
    <h3><span class="badge bg-secondary">Types:</span></h3>
    <ul>
        {{#each types}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <hr>
    <br>
    <h3><span class="badge bg-secondary">Syntax:</span></h3>
    {{#with syntax}}
    <ul>
        <li><span class="badge text-bg-primary">Variables: {{variables}}</span></li>
        <li><span class="badge text-bg-secondary">Functions: {{functions}}</span></li>
        <li><span class="badge text-bg-success">Conditionals: {{conditionals}}</span></li>
        <li><span class="badge text-bg-danger">Loops: {{loops}}</span></li>
        <li><span class="badge text-bg-warning">Classes: {{classes}}</span></li>
    </ul>
    {{/with}}
    <hr>
    <br>
    <h3><span class="badge bg-secondary">Features:</span></h3>
    <ul>
        {{#each features}}
        <li><span class="badge text-bg-success">{{this}}</span></li>
        {{/each}}
    </ul>
    <hr>
    <br>
    <h3><span class="badge bg-secondary">Libraries:</span></h3>
    <ul>
        {{#each libraries}}
        <li><span class="badge text-bg-info">{{this}}</span></li>
        {{/each}}
    </ul>
    <hr>
    <br>
    <h3><span class="badge bg-secondary">Tools:</span></h3>
    <ul>
        {{#each tools}}
        <li><span class="badge text-bg-dark">{{this}}</span></li>
        {{/each}}
    </ul>
    <hr>
    <br>
    <h3><span class="badge bg-secondary">Community:</span></h3>
    <ul>
        {{#each community}}
        <li><button type="button" class="btn btn-link">{{name}}</button> - {{type}}</li>
        {{/each}}
    </ul>
</div>

