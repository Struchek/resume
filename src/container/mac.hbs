{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <main>
        <section>
            <h1 class="mb-5">{{name}} <span class="badge bg-secondary"></span></h1>

            <p><b>Description: </b>{{description}}</p>
            <button type="button" class="btn btn-link">Price: {{price}}</button>

            <p class="my-3"><b>Category: </b>{{category}}</p>

            <h2 class="mb-3">Features: <span class="badge bg-secondary"></span></h2>

            {{#with features}}
            <ul>
                <li>
                    {{#if processor}}
                    {{#with processor}}
                    <h4>Processor: <span class="badge bg-secondary"></span></h4>
                    <p>{{brand}}, {{model}}, {{speed}}, {{cores}} cores, {{cache}} cache</p>
                    {{/with}}
                    {{/if}}
                </li>

                <li>
                    {{#if memory}}
                    {{#with memory}}
                    <h4>Memory: <span class="badge bg-secondary"></span></h4>
                    <p>{{type}}, {{size}}, {{speed}}</p>
                    {{/with}}
                    {{/if}}
                </li>

                <li>
                    {{#if storage}}
                    {{#with storage}}
                    <h4>Storage: <span class="badge bg-secondary"></span></h4>
                    <p>{{type}}, {{size}}</p>
                    {{/with}}
                    {{/if}}
                </li>

                <li>
                    {{#if display}}
                    {{#with display}}
                    <h4>Display: <span class="badge bg-secondary"></span></h4>
                    <p>{{size}}, {{resolution}}, {{technology}}, {{color_space}}, {{brightness}}, {{refresh_rate}}</p>
                    {{/with}}
                    {{/if}}
                </li>

                <li>
                    {{#if graphics}}
                    {{#with graphics}}
                    <h4>Graphics: <span class="badge bg-secondary"></span></h4>
                    <p>{{brand}}, {{model}}, {{memory}}</p>
                    {{/with}}
                    {{/if}}
                </li>

                <li>
                    {{#if ports}}
                    <h4>Ports: <span class="badge bg-secondary"></span></h4>
                    {{#each ports}}
                    <ul>
                        <li>
                            <p>Type: {{type}}</p>
                            <p>Count: {{count}}</p>
                            <ul>
                                {{#each features}}
                                <li>{{this}}</li>
                                {{/each}}
                            </ul>
                        </li>
                    </ul>
                    {{/each}}
                    {{/if}}
                </li>

                <li>
                    {{#if battery}}
                    {{#with battery}}
                    <h4>Battery: <span class="badge bg-secondary"></span></h4>
                    <p>{{type}}, {{capacity}}, {{life}}</p>
                    {{/with}}
                    {{/if}}
                </li>

                <li>
                    {{#if weight}}
                    <h4>Weight: <span class="badge bg-secondary"></span></h4>
                    <p>{{weight}}</p>
                    {{/if}}
                </li>

                <li>
                    {{#if dimensions}}
                    {{#with dimensions}}
                    <h4>Dimensions: <span class="badge bg-secondary"></span></h4>
                    <p>height: {{height}}, width: {{width}}, depth: {{depth}}</p>
                    {{/with}}
                    {{/if}}
                </li>

                <li>
                    {{#if operating_system}}
                    <h4>Operating system: <span class="badge bg-secondary"></span></h4>
                    <p>{{operating_system}}</p>
                    {{/if}}
                </li>

                <li>
                    {{#if accessories}}
                    <h4>Accessories: <span class="badge bg-secondary"></span></h4>
                    {{#each accessories}}
                    <ul>
                        <li>
                            <p>Name: {{name}}</p>
                            <p>Price: {{price}}</p>
                        </li>
                    </ul>
                    {{/each}}
                    {{/if}}
                </li>
            </ul>
            {{/with}}
        </section>
    </main>
</div>

