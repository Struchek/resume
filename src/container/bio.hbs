{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    <h1>Biography</h1>
    <hr>
    <p><b>Name: </b>{{name}}</p>
    <p><b>Birthdate: </b>
        <datetime>{{birthdate}}</datetime>
    <address>({{birthplace}})</address>
    </p>
    <p><b>Deathdate: </b>
        <datetime>{{deathdate}}</datetime>
    <address>({{deathplace}})</address>
    </p>
    <p><b>Nationality: </b>{{nationality}}</p>
    <p><b>Occupation: </b>{{occupation}}</p>
    <p><b>Known for:</b></p>
    <ul>
        {{#each known_for}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <hr>
    <h3>Education</h3>
    <ul>
        {{#each education}}
        <li>
            <p><b>Degree: </b>{{degree}}</p>
            <p><b>Field: </b>{{field}}</p>
            <p><b>institution: </b>{{institution}}</p>
            <p><b>Year: </b>{{year}}</p>
        </li>
        {{/each}}
    </ul>
    <h3>Notable publications</h3>
    <ul>
        {{#each notable_publications}}
        <li>
            <p><b>Title: </b><q>{{title}}</q></p>
            <p><b>Year: </b>{{year}}</p>
            <p><b>Publisher: </b>{{publisher}}</p>
        </li>
        {{/each}}
    </ul>
    <hr>
    <h3>Partners</h3>
    <ul>
        {{#each partners}}
        <li>
            <p><b>Name: </b><q>{{name}}</q></p>
            <p><b>Relationship: </b>{{relationship}}</p>
            <p><b>Years: </b>{{years}}</p>
        </li>
        {{/each}}
    </ul>
    <hr>
    <h3>Awards</h3>
    <ul>
        {{#each awards}}
        <li>
            <p><b>Title: </b>{{title}}</p>
            <p><b>Year: </b>{{year}}</p>
            <p><b>Description: </b>{{description}}</p>
        </li>
        {{/each}}
    </ul>
    <hr>
    <h3>Influence</h3>
    <p><b>Influences: </b></p>
    <ul>
        {{#each influences}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <p><b>Influenced: </b></p>
    <ul>
        {{#each influenced}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <hr>
    <h3>Quotes</h3>
    <ul>
        {{#each quotes}}
        <li><q>{{this}}</q></li>
        {{/each}}
    </ul>
    <hr>
    <h3>Major discoveries and contributions</h3>
    <p><b>Major discoveries: </b></p>
    <ul>
        {{#each major_discoveries}}
        <li>
            <p><b>Title: </b>{{title}}</p>
            <p><b>Year: </b>{{year}}</p>
            <p><b>Description: </b>{{description}}</p>
        </li>
        {{/each}}
    </ul>
    <br>
    <p><b>Contributions: </b></p>
    <ul>
        {{#with contributions}}
        <li>
            <p><b>Title: </b>{{title}}</p>
            <p><b>Description: </b>{{description}}</p>
            <p><b>Year: </b>{{year}}</p>
            <p><b>Field: </b>{{field}}</p>
        </li>
        {{/with}}
    </ul>
</div>

