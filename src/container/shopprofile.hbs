{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<header class="mb-5">
    {{> header}}
</header>

<main>

    <div>
        <h1>{{header}}</h1>
    </div>

    <div>
        {{#with purchase}}

        <ul class="nav nav-tabs">
            {{#each tabs}}
            {{#if @first}}
            <li class="nav-item">
                <a class="nav-link active" href="#">{{this}}</a>
            </li>
            {{else}}
            <li class="nav-item">
                <a class="nav-link" href="#">{{this}}</a>
            </li>
            {{/if}}
            {{/each}}
        </ul>

        <div class="row my-4">
            {{#with actionBlock}}

            <div class="col-4">
                {{#with input}}
                <input class="form-control" placeholder="{{placeholder}}">
                {{/with}}
            </div>

            <div class="col-6">
                {{#each buttons}}
                {{#if isSuccess}}
                <a class="btn btn-success" href="{{link}}">{{text}}</a>
                {{/if}}
                {{#if isOutline}}
                <a class="btn btn-outline-success" href="{{link}}">{{text}}</a>
                {{/if}}
                {{#if isDanger}}
                <a class="btn btn-danger" href="{{link}}">{{text}}</a>
                {{/if}}
                {{/each}}
            </div>
            {{/with}}
        </div>

        <hr>

        <div>
            {{#each itemList}}
            {{> purchaseItem}}
            {{/each}}
        </div>

        <hr class="my-5">
        {{/with}}
    </div>

    <div>
        <div>
            {{#with userInfo}}
            <h2 class="mb-5">{{title}}</h2>

            <div class="row">
                <div class="col-12">
                    {{#with profileData}}
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title mb-4">{{title}}</h3>

                            <div class="card">
                                <div class="card-body">
                                    {{#with fullName}}
                                    <div class="row">
                                        <div class="col-4">
                                            {{#with surname}}
                                            <p class="my-0">{{title}}</p>
                                            <p class="my-0"><b>{{value}}</b></p>
                                            {{/with}}
                                        </div>

                                        <div class="col-4">
                                            {{#with name}}
                                            <p class="my-0">{{title}}</p>
                                            <p class="my-0"><b>{{value}}</b></p>
                                            {{/with}}
                                        </div>

                                        <div class="col-4">
                                            {{#with middleName}}
                                            <p class="my-0">{{title}}</p>
                                            <p class="my-0"><b>{{value}}</b></p>
                                            {{/with}}
                                        </div>
                                    </div>
                                    {{/with}}
                                </div>
                            </div>

                            <div class="card my-4">
                                <div class="card-body">
                                    {{#with otherInfo}}
                                    <div class="row">
                                        <div class="col-4">
                                            {{#with birthday}}
                                            <p class="my-0">{{title}}</p>
                                            <p class="my-0"><b>{{value}}</b></p>
                                            {{/with}}
                                        </div>

                                        <div class="col-4">
                                            {{#with sex}}
                                            <p class="my-0">{{title}}</p>
                                            <p class="my-0"><b>{{value}}</b></p>
                                            {{/with}}
                                        </div>

                                        <div class="col-4">
                                            {{#with language}}
                                            <p class="my-0">{{title}}</p>
                                            <p class="my-0"><b>{{value}}</b></p>
                                            {{/with}}
                                        </div>
                                    </div>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}

                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        {{#each buttons}}
                                        <div class="col-4">
                                            {{#if isPrimary}}
                                            <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                                            {{/if}}
                                            {{#if isSecondary}}
                                            <a class="btn btn-outline-secondary" href="{{link}}">{{text}}</a>
                                            {{/if}}
                                            {{#if isDanger}}
                                            <a class="btn btn-outline-danger" href="{{link}}">{{text}}</a>
                                            {{/if}}
                                        </div>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card my-3">
                        <div class="card-body">
                            {{#with recipients}}
                            <h3 class="card-title mb-4">{{title}}</h3>

                            <div class="row">
                                {{#each users}}
                                <div class="col-4 card mx-1 ps-0">
                                    <div class="card-body">
                                        <p class="my-0">{{name}}</p>
                                        <p class="my-2">{{phone}}</p>
                                        {{#with button}}
                                        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                                        {{/with}}
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            {{#with contacts}}
                            <h3 class="card-title mb-4">{{title}}</h3>

                            <div class="row">
                                {{#each contactData}}
                                <div class="col-4 card">
                                    <div class="card-body">
                                        <p class="my-0">{{title}}</p>
                                        <p class="my-2">{{value}}</p>
                                        {{#with button}}

                                        {{#if isPrimary}}
                                        <a class="btn btn-primary" href="{{link}}">{{text}}</a>
                                        {{/if}}
                                        {{#if isSecondary}}
                                        <a class="btn btn-outline-secondary" href="{{link}}">{{text}}</a>
                                        {{/if}}
                                        {{#if isDanger}}
                                        <a class="btn btn-outline-danger" href="{{link}}">{{text}}</a>
                                        {{/if}}

                                        {{/with}}
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}
                        </div>
                    </div>
                </div>
            </div>
            {{/with}}
        </div>
    </div>

    <hr class="mt-5 mb-2">
</main>

<footer>
    {{> footerBootstrap}}
</footer>
